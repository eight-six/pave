{
  "Description": "Sets System and Apps to dark mode",
  "Keys": [
    {
      "Path": "HKCU:Software\\Microsoft\\Windows\\CurrentVersion\\Themes\\Personalize",
      "Name": "SystemUsesLightTheme",
      "Value": 0,
      "Type": "DWord",
      "Description": "Set system to dark mode"
    },
    {
      "Path": "HKCU:Software\\Microsoft\\Windows\\CurrentVersion\\Themes\\Personalize",
      "Name": "AppsUseLightTheme",
      "Value": 0,
      "Type": "DWord",
      "Description": "Set apps to dark mode"
    }
  ]
}